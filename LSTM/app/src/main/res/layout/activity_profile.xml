<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal|top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/user"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:cardCornerRadius="60dp"
                app:cardElevation="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Profile"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/profileSettingsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:padding="16dp"/>

        <Button
            android:id="@+id/changePasswordBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:padding="16dp"/>

        <Button
            android:id="@+id/configBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configure Thresholds"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:padding="16dp"/>

        <Button
            android:id="@+id/customizeAlertsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customize Alerts"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:padding="16dp"/>

        <Button
            android:id="@+id/changeSecurityQuestionsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:padding="16dp" />

        <Button
            android:id="@+id/reportBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reports"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:padding="16dp"/>

        <Button
            android:id="@+id/viewAdminBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Admin"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/logsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logs"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:padding="16dp"/>

        <Button
            android:id="@+id/addDeviceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Device"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:padding="16dp"/>

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="28dp"
            android:padding="16dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>