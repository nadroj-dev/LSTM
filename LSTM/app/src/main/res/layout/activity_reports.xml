<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F5F5F5">

        <!-- CardView for Temperature Metrics -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="start">

                <TextView
                    android:id="@+id/avgTempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average Temperature: --"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#555"/>

                <TextView
                    android:id="@+id/highestTempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Highest Temperature: --"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#555"/>

                <TextView
                    android:id="@+id/lowestTempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lowest Temperature: --"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#555"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for Humidity Metrics -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="start">

                <TextView
                    android:id="@+id/avgHumidityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average Humidity: --"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#555"/>

                <TextView
                    android:id="@+id/highestHumidityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Highest Humidity: --"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#555"/>

                <TextView
                    android:id="@+id/lowestHumidityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lowest Humidity: --"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#555"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Download CSV Button -->
        <Button
            android:id="@+id/downloadCsvButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download CSV"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@color/blue"
            android:layout_marginTop="16dp" />

        <!-- Download PDF Button -->
        <Button
            android:id="@+id/downloadPdfButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download PDF"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@color/blue"
            android:layout_marginTop="16dp" />

        <!-- Download Logs Button -->
        <Button
            android:id="@+id/downloadLogsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download Logs"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@color/blue"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>